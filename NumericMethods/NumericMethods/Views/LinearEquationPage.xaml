<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="NumericMethods.Views.LinearEquationPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="clr-namespace:NumericMethods.Views.Behaviors;assembly=NumericMethods"
    xmlns:renderers="clr-namespace:NumericMethods.Renderers;assembly=NumericMethods"
    x:Name="LinearEquationPageName">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0" VerticalOptions="FillAndExpand">
                <renderers:ValidationEntry
                    Margin="16,16,16,0"
                    AutoSize="TextChanges"
                    Placeholder="Wpisz równanie"
                    Text="{Binding EquationPattern}"
                    VerticalOptions="Fill" />
                <StackLayout
                    Margin="16,0,16,16"
                    BackgroundColor="#BF0C34"
                    VerticalOptions="EndAndExpand">
                    <Label
                        Margin="16"
                        FontAttributes="Bold"
                        FontSize="16"
                        HorizontalOptions="StartAndExpand"
                        Text="x = 1"
                        TextColor="White"
                        VerticalOptions="CenterAndExpand" />
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer />
                    </StackLayout.GestureRecognizers>
                    <StackLayout.Behaviors>
                        <behaviors:ViewTappedWithAnimationBehavior Command="{Binding BindingContext.GoToSolveEquationPageCommand, Source={x:Reference LinearEquationPageName}}" />
                    </StackLayout.Behaviors>
                </StackLayout>
            </StackLayout>
            <Grid
                Grid.Row="1"
                ColumnSpacing="0"
                RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Row="0"
                    Grid.Column="0"
                    BackgroundColor="#E4E5E6"
                    Command="{Binding AppendPatternCommand}"
                    CommandParameter="!"
                    CornerRadius="0"
                    FontSize="16"
                    Text="!" />
                <Button
                    Grid.Row="0"
                    Grid.Column="1"
                    BackgroundColor="#E4E5E6"
                    Command="{Binding AppendPatternCommand}"
                    CommandParameter="("
                    CornerRadius="0"
                    FontSize="16"
                    Text="(" />
                <Button
                    Grid.Row="0"
                    Grid.Column="2"
                    BackgroundColor="#E4E5E6"
                    Command="{Binding AppendPatternCommand}"
                    CommandParameter=")"
                    CornerRadius="0"
                    FontSize="16"
                    Text=")" />
                <Button
                    Grid.Row="0"
                    Grid.Column="3"
                    BackgroundColor="#E4E5E6"
                    Command="{Binding AppendPatternCommand}"
                    CommandParameter="x"
                    CornerRadius="0"
                    FontSize="16"
                    Text="x" />
                <Button
                    Grid.Row="0"
                    Grid.Column="4"
                    BackgroundColor="#E4E5E6"
                    Command="{Binding RemovePatternCharacterCommand}"
                    CornerRadius="0"
                    FontSize="16"
                    Text="←" />
                <Button
                    Grid.Row="1"
                    Grid.Column="0"
                    BackgroundColor="#E4E5E6"
                    Command="{Binding AppendPatternCommand}"
                    CommandParameter="|x|"
                    CornerRadius="0"
                    FontSize="16"
                    Text="|x|" />
                <Button
                    Grid.Row="1"
                    Grid.Column="1"
                    BackgroundColor="#ffffff"
                    Command="{Binding AppendPatternCommand}"
                    CommandParameter="7"
                    CornerRadius="0"
                    FontSize="16"
                    Text="7" />
                <Button
                    Grid.Row="1"
                    Grid.Column="2"
                    BackgroundColor="#ffffff"
                    Command="{Binding AppendPatternCommand}"
                    CommandParameter="8"
                    CornerRadius="0"
                    FontSize="16"
                    Text="8" />
                <Button
                    Grid.Row="1"
                    Grid.Column="3"
                    BackgroundColor="#ffffff"
                    Command="{Binding AppendPatternCommand}"
                    CommandParameter="9"
                    CornerRadius="0"
                    FontSize="16"
                    Text="9" />
                <Button
                    Grid.Row="1"
                    Grid.Column="4"
                    BackgroundColor="#E4E5E6"
                    Command="{Binding AppendPatternCommand}"
                    CommandParameter="÷"
                    CornerRadius="0"
                    FontSize="16"
                    Text="÷" />
                <Button
                    Grid.Row="2"
                    Grid.Column="0"
                    BackgroundColor="#E4E5E6"
                    Command="{Binding AppendPatternCommand}"
                    CommandParameter="γ"
                    CornerRadius="0"
                    FontSize="16"
                    Text="γ" />
                <Button
                    Grid.Row="2"
                    Grid.Column="1"
                    BackgroundColor="#ffffff"
                    Command="{Binding AppendPatternCommand}"
                    CommandParameter="4"
                    CornerRadius="0"
                    FontSize="16"
                    Text="4" />
                <Button
                    Grid.Row="2"
                    Grid.Column="2"
                    BackgroundColor="#ffffff"
                    Command="{Binding AppendPatternCommand}"
                    CommandParameter="5"
                    CornerRadius="0"
                    FontSize="16"
                    Text="5" />
                <Button
                    Grid.Row="2"
                    Grid.Column="3"
                    BackgroundColor="#ffffff"
                    Command="{Binding AppendPatternCommand}"
                    CommandParameter="6"
                    CornerRadius="0"
                    FontSize="16"
                    Text="6" />
                <Button
                    Grid.Row="2"
                    Grid.Column="4"
                    BackgroundColor="#E4E5E6"
                    Command="{Binding AppendPatternCommand}"
                    CommandParameter="×"
                    CornerRadius="0"
                    FontSize="16"
                    Text="×" />
                <Button
                    Grid.Row="3"
                    Grid.Column="0"
                    BackgroundColor="#E4E5E6"
                    Command="{Binding AppendPatternCommand}"
                    CommandParameter="π"
                    CornerRadius="0"
                    FontSize="16"
                    Text="π" />
                <Button
                    Grid.Row="3"
                    Grid.Column="1"
                    BackgroundColor="#ffffff"
                    Command="{Binding AppendPatternCommand}"
                    CommandParameter="1"
                    CornerRadius="0"
                    FontSize="16"
                    Text="1" />
                <Button
                    Grid.Row="3"
                    Grid.Column="2"
                    BackgroundColor="#ffffff"
                    Command="{Binding AppendPatternCommand}"
                    CommandParameter="2"
                    CornerRadius="0"
                    FontSize="16"
                    Text="2" />
                <Button
                    Grid.Row="3"
                    Grid.Column="3"
                    BackgroundColor="#ffffff"
                    Command="{Binding AppendPatternCommand}"
                    CommandParameter="3"
                    CornerRadius="0"
                    FontSize="16"
                    Text="3" />
                <Button
                    Grid.Row="3"
                    Grid.Column="4"
                    BackgroundColor="#E4E5E6"
                    Command="{Binding AppendPatternCommand}"
                    CommandParameter="-"
                    CornerRadius="0"
                    FontSize="16"
                    Text="-" />
                <Button
                    Grid.Row="4"
                    Grid.Column="0"
                    BackgroundColor="#E4E5E6"
                    Command="{Binding AppendPatternCommand}"
                    CommandParameter="e"
                    CornerRadius="0"
                    FontSize="16"
                    Text="e" />
                <Button
                    Grid.Row="4"
                    Grid.Column="1"
                    BackgroundColor="#ffffff"
                    Command="{Binding AppendPatternCommand}"
                    CommandParameter="0"
                    CornerRadius="0"
                    FontSize="16"
                    Text="0" />
                <Button
                    Grid.Row="4"
                    Grid.Column="2"
                    BackgroundColor="#ffffff"
                    Command="{Binding AppendPatternCommand}"
                    CommandParameter="."
                    CornerRadius="0"
                    FontSize="16"
                    Text="." />
                <Button
                    Grid.Row="4"
                    Grid.Column="3"
                    BackgroundColor="#E4E5E6"
                    Command="{Binding AppendPatternCommand}"
                    CommandParameter="="
                    CornerRadius="0"
                    FontSize="16"
                    Text="=" />
                <Button
                    Grid.Row="4"
                    Grid.Column="4"
                    BackgroundColor="#E4E5E6"
                    Command="{Binding AppendPatternCommand}"
                    CommandParameter="+"
                    CornerRadius="0"
                    FontSize="16"
                    Text="+" />
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>